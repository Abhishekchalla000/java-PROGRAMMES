package helloworlds;

public class Factorial {
public static void main(String[]args) {
	int i,fact=1;
	int number=10;
	int total=0; 
	for(i=1;i<=number;i++) {
		/*
		i=1-> 1=1*1=1
		 i=2-> 1=1*2=2
		 i=3-> 2=2*3=6
		 i=4-> 6=6*4=24
		 i=5-> 24*5=120
		 i=6-> loop fail..!
		  */
	//multiplication 5*4*3*2*1=120
		fact*=i;
    //fact=fact*i;
	//	addition
		total+=fact;	
	}
		
	System.out.println("number  is: " +fact); 
	System.out.println("toal number  is: " +total); 
}


}
